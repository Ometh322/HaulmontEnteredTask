<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="&#1057;&#1087;&#1080;&#1089;&#1086;&#1082; &#1088;&#1077;&#1094;&#1077;&#1087;&#1090;&#1086;&#1074;"
        focusComponent="table"
        messagesPack="com.company.polyclinic.web.screens.recipe">
    <data>
        <collection id="recipesDc"
                    class="com.company.polyclinic.entity.Recipe">
            <view extends="_local">
                <property name="patient" view="_minimal"/>
                <property name="doctor" view="_minimal"/>
            </view>
            <loader id="recipesDl">
                <query>
                    <![CDATA[select e from polyclinic_Recipe e]]>
                </query>
            </loader>
        </collection>
        <instance id="recipeDc"
                  class="com.company.polyclinic.entity.Recipe">
            <view extends="_local">
                <property name="patient" view="_minimal"/>
                <property name="doctor" view="_minimal"/>
            </view>
            <loader/>
            <collection id="patientDc" property="patient"/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" dataLoader="recipesDl"
                        caption="&#1055;&#1086;&#1080;&#1089;&#1082;" editable="false"
                        applyImmediately="false">
                    <properties include=".*"/>
                    <property caption="Пациент" name="patient"/>
                    <property name="priority" caption="Приоритет"/>
                    <property name="description" caption="Описание"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="recipesDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="description" caption="&#1054;&#1087;&#1080;&#1089;&#1072;&#1085;&#1080;&#1077;"/>
                        <column id="priority"
                                caption="&#1055;&#1088;&#1080;&#1086;&#1088;&#1080;&#1090;&#1077;&#1090;"/>
                        <column id="doctor" caption="&#1042;&#1088;&#1072;&#1095;"/>
                        <column id="startDate"
                                caption="&#1044;&#1072;&#1090;&#1072; &#1089;&#1086;&#1079;&#1076;&#1072;&#1085;&#1080;&#1103;"/>
                        <column id="endDate"
                                caption="&#1044;&#1077;&#1081;&#1089;&#1090;&#1074;&#1080;&#1090;&#1077;&#1083;&#1077;&#1085; &#1076;&#1086;"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"
                                caption="&#1044;&#1086;&#1073;&#1072;&#1074;&#1080;&#1090;&#1100;"/>
                        <button id="editBtn" action="table.edit"
                                caption="&#1048;&#1079;&#1084;&#1077;&#1085;&#1080;&#1090;&#1100;"/>
                        <button id="removeBtn" action="table.remove"
                                caption="&#1059;&#1076;&#1072;&#1083;&#1080;&#1090;&#1100;"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="tabSheetBox" spacing="true">
                <vbox id="tabSheetBox">
                    <tabSheet id="tabSheet" height="100%">
                        <tab id="mainTab" caption="&#1056;&#1077;&#1094;&#1077;&#1087;&#1090;" margin="true"
                             description="&#1054;&#1082;&#1085;&#1086; &#1088;&#1077;&#1076;&#1072;&#1082;&#1090;&#1080;&#1088;&#1086;&#1074;&#1072;&#1085;&#1080;&#1103;/&#1089;&#1086;&#1079;&#1076;&#1072;&#1085;&#1080;&#1103; &#1088;&#1077;&#1094;&#1077;&#1087;&#1090;&#1072;">
                            <scrollBox id="fieldGroupBox"
                                       height="100%">
                                <form id="form" dataContainer="recipeDc">
                                    <column width="350px">
                                        <textField id="descriptionField" property="description"
                                                   caption="&#1054;&#1087;&#1080;&#1089;&#1072;&#1085;&#1080;&#1077;"/>
                                        <lookupField id="priorityField" property="priority"
                                                     caption="&#1055;&#1088;&#1080;&#1086;&#1088;&#1080;&#1090;&#1077;&#1090;"/>
                                        <pickerField id="doctorField" property="doctor"
                                                     caption="&#1042;&#1088;&#1072;&#1095;">
                                            <actions>
                                                <action id="lookup" type="picker_lookup"/>
                                                <action id="clear" type="picker_clear"/>
                                            </actions>
                                        </pickerField>
                                        <dateField id="startDateField" property="startDate"
                                                   caption="&#1044;&#1072;&#1090;&#1072; &#1089;&#1086;&#1079;&#1076;&#1072;&#1085;&#1080;&#1103;"/>
                                        <textField id="durationField" property="duration" datatype="int"
                                                   caption="&#1057;&#1088;&#1086;&#1082; &#1076;&#1077;&#1081;&#1089;&#1090;&#1074;&#1080;&#1103; (&#1084;&#1077;&#1089;&#1103;&#1094;&#1077;&#1074;)"
                                                   required="true"/>
                                    </column>
                                </form>
                            </scrollBox>
                        </tab>
                        <tab id='patientTab' caption="&#1055;&#1072;&#1094;&#1080;&#1077;&#1085;&#1090;&#1099;"
                             margin='true,false,false,false'
                             description="&#1057;&#1087;&#1080;&#1089;&#1086;&#1082; &#1087;&#1072;&#1094;&#1080;&#1077;&#1085;&#1090;&#1086;&#1074;, &#1082;&#1086;&#1090;&#1086;&#1088;&#1099;&#1084; &#1087;&#1088;&#1086;&#1087;&#1080;&#1089;&#1072;&#1085; &#1076;&#1072;&#1085;&#1085;&#1099;&#1081; &#1088;&#1077;&#1094;&#1077;&#1087;&#1090;">
                            <table id="patientTable" dataContainer="patientDc" width="100%" height="200px">
                                <actions>
                                    <action id="add" type="add"
                                            caption="&#1044;&#1086;&#1073;&#1072;&#1074;&#1080;&#1090;&#1100;"/>
                                    <action id="exclude" type="exclude"
                                            caption="&#1059;&#1076;&#1072;&#1083;&#1080;&#1090;&#1100;"/>
                                </actions>
                                <columns>
                                    <column id="lastName" caption="&#1060;&#1072;&#1084;&#1080;&#1083;&#1080;&#1103;"/>
                                    <column id="firstName" caption="&#1048;&#1084;&#1103;"/>
                                </columns>
                                <buttonsPanel>
                                    <button action="patientTable.add"/>
                                    <button action="patientTable.exclude"/>
                                </buttonsPanel>
                            </table>
                        </tab>
                    </tabSheet>
                </vbox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save" caption="&#1054;&#1082;"/>
                    <button id="cancelBtn" action="cancel" caption="&#1054;&#1090;&#1084;&#1077;&#1085;&#1072;"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
